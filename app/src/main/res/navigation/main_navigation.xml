<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/hubFragment">

    <fragment
        android:id="@+id/hubFragment"
        android:name="com.corylab.citatum.fragment.HubFragment"
        android:label="HubFragment"
        tools:layout="@layout/hub_fragment">
        <action
            android:id="@+id/action_hubFragment_to_repositoryFragment"
            app:destination="@id/repositoryFragment" />
        <action
            android:id="@+id/action_hubFragment_to_tagsFragment"
            app:destination="@id/tagsFragment" />
    </fragment>
    <fragment
        android:id="@+id/repositoryFragment"
        android:name="com.corylab.citatum.fragment.RepositoryFragment"
        android:label="RepositoryFragment"
        tools:layout="@layout/repository_fragment">
        <action
            android:id="@+id/action_repositoryFragment_to_tagsFragment"
            app:destination="@id/tagsFragment" />
    </fragment>
    <fragment
        android:id="@+id/tagsFragment"
        android:name="com.corylab.citatum.fragment.TagsFragment"
        android:label="TagsFragment"
        tools:layout="@layout/tags_fragment">
        <action
            android:id="@+id/action_tagsFragment_to_repositoryFragment"
            app:destination="@id/repositoryFragment" />
    </fragment>
</navigation>