<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/central_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- TextView для отображения названия страницы -->
    <TextView
        android:id="@+id/page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gothampro_black"
        android:gravity="center"
        android:text="@string/default_text"
        android:textColor="@color/black"
        android:textSize="@dimen/page_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/red_bookmark"
        app:layout_constraintEnd_toStartOf="@+id/red_bookmark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Изображение красной закладки -->
    <ImageView
        android:id="@+id/red_bookmark"
        android:layout_width="60dp"
        android:layout_height="138dp"
        android:layout_marginEnd="25dp"
        android:contentDescription="@string/home_bookmark_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_bookmark" />

    <!-- Кнопка, которая вызывает другой фрагмент -->
    <Button
        android:id="@+id/first_intent_button"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@color/light_red"
        android:fontFamily="@font/gothampro_medium"
        android:text="Первый фрагмент"
        android:textColor="@color/black"
        android:textSize="@dimen/lite_text_size"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_bookmark" />

    <!-- Кнопка, которая вызывает другой фрагмент -->
    <Button
        android:id="@+id/second_intent_button"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@color/light_red"
        android:fontFamily="@font/gothampro_medium"
        android:text="Второй фрагмент"
        android:textColor="@color/black"
        android:textSize="@dimen/lite_text_size"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_intent_button" />

</androidx.constraintlayout.widget.ConstraintLayout>